   <div class="container-fluid" style="background-image: url('/imgs/3.jpg');padding-top:1%;padding-bottom:4%;">
      <div class="row justify-content-center custom-margin">
         <div class="col-sm-6 col-md-4">
            <!-- Add bg-primary in form tag if want form background color-->
            <!--text-white if want text color white-->
            <form action="signin" class="shadow-lg p-4 text-white bg-dark" method="POST">  
               <div class="form-group">
                     <h2 class="text-center">Sign in</h2>
                     <% include ./partials/messages%>
                  <i class="fas fa-envelope"></i><label for="email" class="pl-2 font-weight-bold">Email</label><input type="email"
                     class="form-control" placeholder="Email" name="email">
                  <!--Add text-white below if want text color white-->
                  <small class="form-text">We'll never share your email with anyone else.</small>
               </div>
               <div class="form-group">
                  <i class="fas fa-key"></i><label for="pass" class="pl-2 font-weight-bold">Password</label><input type="password"
                     class="form-control" placeholder="Password" name="password">
               </div>
              
               <button type="submit" class="btn btn-outline-success mt-3 btn-block shadow-sm font-weight-bold">Log In</button>
              <br/><p style="text-align: center;">OR</p>
              <a href="/user/signup" style="text-decoration: none; color:rgb(50, 50, 214)"><button type="button" class="btn btn-outline-primary mt-3 btn-block shadow-sm font-weight-bold">Sign Up</button></a>
            </form>
         </div>
      </div>
   </div>


