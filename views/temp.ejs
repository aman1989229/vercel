    <div class="container-fluid">
      <div class="row">
        <div class="card" style="width:100%;">
        <img src="/imgs/banner1.jpg" class="card-img-top" alt="Banner">
        </div>
      </div>
           <div class="col-sm-6 col-md-4">
              <!-- Add bg-primary in form tag if want form background color-->
              <!--text-white if want text color white-->
              
              <form class="shadow-lg p-4 text-white bg-dark"  method="post" action="/consult/save">
                <input type="hidden" id="id" name="id" value="">
                  <div class="form-group"> 
                        <h2 class="text-center">Ask Doc</h2>
                        <% include ./partials/messages%> 
                    <i class="fas fa-envelope"></i><label for="fname" class="pl-2 font-weight-bold">First Name:</label><input type="text"
                       class="form-control" placeholder="abc" name="fname" value="">
                  </div>
                 
                  <div class="form-group">  
                   
                        <i class="fas fa-user"></i><label for="lname" class="pl-2 font-weight-bold">Last Name:</label><input type="text"
                           class="form-control" placeholder="xyz" name="lname" value="<% typeof lname !='undefined' ?lname:''%>">
                      </div>
                      
                      <div class="form-group">  
                            <i class="fas fa-envelope"></i><label for="sex" class="pl-2 font-weight-bold">Sex:</label>
                        <select class="custom-select" name="sex">
                              <option selected>Choose...</option>
                              <option value="Male">Male</option>
                              <option value="Female">Female</option>
                            </select>
                      </div>

                          <div class="form-group">  
                   
                                <i class="fas fa-user"></i><label for="age" class="pl-2 font-weight-bold">Age:</label><input type="user"
                                   class="form-control" placeholder="21.." name="age" value="<% typeof age !='undefined' ?age:''%>">
                              </div>
                 
                    <div class="form-group">  
                            <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                      <label class="input-group-text" for="speciality">Speciality</label>
                                    </div>
                                    <select class="custom-select" name="speciality">
                                      <option selected>Choose...</option>
                                      
                                      <option value=""></option>
                                     
                                    </select>
                                  </div>
                      </div>
          
                      <div class="form-group">
                          <div class="col-sm-6" style="margin-top: 5px;text-align: left; font-size: 14px!important; min-height: 26vh; line-height: 21px; padding: 10px;resize: none;">
                              <textarea required=""  name="descrp" id="descrp" placeholder="Please type your health issue in detail. E.g: I am suffering from high fever and skin rashes since 2 days. I took dolo-650, but it didn't help. Please suggest medicine or tests that are required." class="custmInput form-control" rows="5" cols="50"></textarea>
                            </div>
                        
                        <i class="fas fa-envelope"></i><label for="address" class="pl-2 font-weight-bold">Message:</label><textarea
                           class="form-control" placeholder="Your problem..." name="message" value="<% typeof message !='undefined' ?message:''%>"></textarea>
                      </div>
                      
                       <button type="submit" class="btn btn-outline-success mt-3 btn-block shadow-sm font-weight-bold">Submit</button>
              </form>
            </div>
        
        </div>
  
